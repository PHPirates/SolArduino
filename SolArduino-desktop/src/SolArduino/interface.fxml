<TabPane fx:controller="SolArduino.Controller"
         xmlns:fx="http://javafx.com/fxml"
         tabClosingPolicy="UNAVAILABLE">

    <Tab fx:id="control"
        text="Control">
        <GridPane hgap="10" vgap="10" >
            <columnConstraints>
                <ColumnConstraints percentWidth="70"/>
                <ColumnConstraints percentWidth="30"/>

            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
            </rowConstraints>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

    <Button
        fx:id="buttonUp"
        GridPane.columnIndex="1"
        GridPane.rowIndex="0"
        maxHeight="Infinity"
        maxWidth="Infinity"
        onMousePressed="#buttonUp"
        onMouseReleased="#buttonUp">
        <!--<graphic>-->
            <!--<ImageView-->
                <!--id="buttonUpGraphic"-->
                <!--fitWidth="40"-->
                <!--fitHeight="40"-->
                <!--preserveRatio="true">-->
            <!--</ImageView>-->
        <!--</graphic>-->
    </Button>
    <Button
            fx:id="buttonDown"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            maxWidth="Infinity"
            maxHeight="Infinity"
            onMousePressed="#buttonDown"
            onMouseReleased="#buttonDown">
        <graphic>
            <ImageView fx:id="buttonDownImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <!--<image>-->
                    <!--&lt;!&ndash;<Image url="https://i.gyazo.com/d04854e47cd16cf90cb32e7fdc728b73.png" />&ndash;&gt;-->
                    <!--<Image url="resources/down.png" />-->
                <!--</image>-->
            </ImageView>
        </graphic>
    </Button>
    <Button
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            maxHeight="Infinity"
            maxWidth="Infinity"
            text="auto"
            onAction="#buttonAuto">
    </Button>
    <Button
            fx:id="buttonUpdate"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            maxWidth="Infinity"
            maxHeight="Infinity"
            text="update"
            onAction="#buttonUpdate">
    </Button>

    <Slider
        fx:id="slider"
        min="5"
        max="57"
        value="42"
        showTickMarks="true"
        majorTickUnit="5"
        showTickLabels="true"
        minWidth="300"
        GridPane.columnIndex="0"
        GridPane.rowIndex="4"
        />

    <Button
            fx:id="buttonSetAngle"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            maxHeight="Infinity"
            maxWidth="Infinity"
            text="set panels at 42 degrees"
            onAction="#setAngle">
    </Button>

        </GridPane>
    </Tab>

    <Tab fx:id="information"
        text="Information">
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>


            <LineChart fx:id="graph"
                GridPane.columnIndex="0">
                <xAxis><NumberAxis label="time" lowerBound="0" upperBound="24"/></xAxis>
                <yAxis><NumberAxis label="power" lowerBound="0" upperBound="7000"/></yAxis>
            </LineChart>

            <Button fx:id="generateGraph"
                GridPane.columnIndex="1"
                text="Generate"
                onAction="#generateGraph">
            </Button>
        </GridPane>
    </Tab>
</TabPane>