<TabPane fx:controller="SolArduino.Controller"
         xmlns:fx="http://javafx.com/fxml"
         tabClosingPolicy="UNAVAILABLE">

    <Tab fx:id="control"
        text="Control">
        <GridPane hgap="10" vgap="10" >
            <columnConstraints>
                <ColumnConstraints percentWidth="70"/>
                <ColumnConstraints percentWidth="30"/>

            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
            </rowConstraints>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

    <Button
        fx:id="buttonUp"
        GridPane.columnIndex="1"
        GridPane.rowIndex="0"
        maxHeight="Infinity"
        maxWidth="Infinity"
        onMousePressed="#buttonUp"
        onMouseReleased="#buttonUp">
        <!--<graphic>-->
            <!--<ImageView-->
                <!--id="buttonUpGraphic"-->
                <!--fitWidth="40"-->
                <!--fitHeight="40"-->
                <!--preserveRatio="true">-->
            <!--</ImageView>-->
        <!--</graphic>-->
    </Button>
    <Button
            fx:id="buttonDown"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            maxWidth="Infinity"
            maxHeight="Infinity"
            onMousePressed="#buttonDown"
            onMouseReleased="#buttonDown">
        <graphic>
            <ImageView fx:id="buttonDownImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <!--<image>-->
                    <!--&lt;!&ndash;<Image url="https://i.gyazo.com/d04854e47cd16cf90cb32e7fdc728b73.png" />&ndash;&gt;-->
                    <!--<Image url="resources/down.png" />-->
                <!--</image>-->
            </ImageView>
        </graphic>
    </Button>
    <Button
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            GridPane.halignment="CENTER"
            GridPane.valignment="CENTER"
            maxHeight="40"
            maxWidth="100"
            text="auto"
            onAction="#buttonAuto">
    </Button>
    <Button
            fx:id="buttonUpdate"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            GridPane.halignment="CENTER"
            GridPane.valignment="CENTER"
            maxHeight="40"
            maxWidth="100"
            text="update"
            onAction="#buttonUpdate">
    </Button>

    <Slider
        fx:id="slider"
        min="5"
        max="57"
        value="42"
        showTickMarks="true"
        majorTickUnit="5"
        showTickLabels="true"
        minWidth="300"
        GridPane.columnIndex="0"
        GridPane.rowIndex="4"
        />

    <Text
        fx:id="responseTextView"
        GridPane.columnIndex="0"
        GridPane.rowIndex="3"
        />

    <Button
            fx:id="buttonSetAngle"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            GridPane.halignment="CENTER"
            GridPane.valignment="CENTER"
            maxHeight="40"
            maxWidth="Infinity"
            text="set panels at 42 degrees"
            onAction="#setAngle">
    </Button>

        </GridPane>
    </Tab>

    <Tab fx:id="information"
        text="Information">
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>


            <LineChart fx:id="graph"
                GridPane.columnIndex="0"
                GridPane.rowIndex="0"
                GridPane.rowSpan="3">
                <xAxis>
                    <NumberAxis
                        label="time"
                        autoRanging="false"
                        lowerBound="5"
                        upperBound="23"
                        tickUnit="1"/>
                </xAxis>
                <yAxis>
                    <NumberAxis
                        label="angle"
                        autoRanging="false"
                        tickUnit="10"/>
                </yAxis>
            </LineChart>

            <TableView fx:id="table"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="timeColumn" text="time">
                        <cellValueFactory>
                            <PropertyValueFactory property="time"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="angleColumn" text="angle">
                        <cellValueFactory>
                            <PropertyValueFactory property="angle"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>

            </TableView>

            <Text text="Pick a day: "
                GridPane.columnIndex="1"
                GridPane.rowIndex="1"/>
            <DatePicker fx:id="datePicker"
                GridPane.columnIndex="1"
                GridPane.rowIndex="2">

            </DatePicker>
        </GridPane>
    </Tab>
</TabPane>